<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">

	<!-- DB上のカラム名とjava側の変数名のすり合わせを行う -->
	<resultMap type="com.example.demo.entity.User" id="UserResultMap">
		
		<!-- 主キーのマッピング -->
		<id column="user_id" property="userId"/>
		
		<!-- 通常カラムのマッピング -->
		<result column="name" property="name"/>
		<result column="mail_address" property="mailAddress"/>
		<result column="password" property="password"/>
		<result column="role" property="role"/>
		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
		
		<!-- association,collectionは必要に応じて書き加える -->
	
	</resultMap>
	
 		<select id="findByMailAddress" resultType="com.example.demo.entity.User" resultMap="UserResultMap">
		
			SELECT
					*
			FROM
					users
			WHERE
					mail_address = #{mailAddress}
		
		</select>
		
		<insert id="create">
		
			INSERT INTO users(
					name,
					mail_address,
					password
			) VALUES (
			<!-- #{〇〇}でフォーム上の〇〇というフィールド名のパラメータを反映 -->
					#{name},
					#{mailAddress},
					#{password}
			)
		
		</insert>

</mapper>