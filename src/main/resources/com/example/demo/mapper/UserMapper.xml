<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">

	<!-- DB上のカラム名とjava側の変数名のすり合わせを行う -->
	<resultMap type="com.example.demo.entity.User" id="UserResultMap">
		
		<!-- 主キーのマッピング -->
		<id column="user_id" property="userId"/>
		
		<!-- 通常カラムのマッピング -->
		<result column="name" property="name"/>
		<result column="mail_address" property="mailAddress"/>
		<result column="password" property="password"/>
		<result column="role" property="role"/>
		<result column="created_at" property="createdAt"/>
		<result column="updated_at" property="updatedAt"/>
		
		<!-- association,collectionは必要に応じて書き加える -->
	
	</resultMap>
	
		<select id="getAllUsers" resultType="com.example.demo.entity.User" resultMap="UserResultMap">
		
			SELECT
					user_id,
					name,
					mail_address,
					role,
					created_at,
					updated_at
			FROM
					users
			ORDER BY
				<choose>
		            <when test="sort == 'userId'">user_id</when>
		            <when test="sort == 'role'">role</when>
		            <otherwise>user_id</otherwise>
		        </choose>
		        
		        <if test="order == 'asc'">ASC</if>
		        <if test="order == 'desc'">DESC</if>
		        
		        , user_id
		
		</select>
	
 		<select id="findByMailAddress" resultType="com.example.demo.entity.User" resultMap="UserResultMap">
		
			SELECT
					*
			FROM
					users
			WHERE
					mail_address = #{mailAddress}
		
		</select>
		
		<select id="getByUserId" resultType="com.example.demo.entity.User" resultMap="UserResultMap">
		
			SELECT
					*
			FROM
					users
			WHERE
					user_id = #{userId}
		
		</select>
		
		<!-- データを作成した際に、自動採番でDBに登録された値をjava側のオブジェクトに渡す（オブジェクトのどの値かはkeyPropertyで設定） -->
		<insert id="create" useGeneratedKeys="true" keyProperty="userId">
		
			INSERT INTO users(
					name,
					mail_address,
					password
			) VALUES (
			<!-- #{〇〇}でフォーム上の〇〇というフィールド名のパラメータを反映 -->
					#{name},
					#{mailAddress},
					#{password}
			)
		
		</insert>
		
		<update id="update">
		
			UPDATE
					users
			SET
					name = #{name},
					mail_address = #{mailAddress},
					password = #{password},
					updated_at = CURRENT_TIMESTAMP
			WHERE
					user_id = #{userId}
		
		</update>
		
		<delete id="delete">
    	
    	
    		DELETE FROM
    				users
    		WHERE
    				user_id = #{userId}
    		
    	</delete>

</mapper>